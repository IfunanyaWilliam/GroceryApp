@model IEnumerable<GroceryApp.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-4">
    @foreach(var item in @Model)
    {
        <div class="card m-2" style="width: 15rem;">
            <img class="card-img-top" src="@item.ImageUrl" alt="Card image" />
            <div class="card-body form-control">
                <h4 class="card-title">@item.Name</h4>
                <p class="card-text">Price: #@item.Price.ToString(".00")</p> 
                <a asp-action="Details" asp-controller="Home" asp-route-productId="@item.Id" class="btn btn-primary">Detais</a>
            </div>
        </div>
    }
</div>


