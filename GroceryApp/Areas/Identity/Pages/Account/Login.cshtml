@page
@model LoginModel

<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="/Images/cart-image.GIF"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form class="align-items-center" id="account" method="post">
          

          <!-- Email input -->
          <div class="form-outline mb-4 pt-4">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.Email" id="form3Example3" class="form-control form-control-lg mt-lg-5"
              placeholder="Enter a valid email address" autocomplete="username" aria-required="true"/>
            <label asp-for="Input.Email" class="form-label" for="form3Example3">Email address</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <input asp-for="Input.Password" id="form3Example4" class="form-control form-control-lg"
              autocomplete="current-password" placeholder="Enter password" aria-required="true" />
            <label asp-for="Input.Password" class="form-label" for="form3Example4">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <input class="form-check-input me-2" asp-for="Input.RememberMe" value="" id="form2Example3" />
              <label class="form-check-label" asp-for="Input.RememberMe" for="form2Example3">
                @Html.DisplayNameFor(m => m.Input.RememberMe)
              </label>
            </div>
            <a id="forgot-password" asp-page="./ForgotPassword" class="text-body">Forgot password?</a>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" class="btn btn-primary btn-lg w-100" id="login-submit"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? 
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                class="link-danger">Register</a>
            </p>
            <p class="small fw-bold mt-2 pt-1 mb-0">
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="link-danger">Resend email confirmation</a>
             </p>
         </div>

       </form>
     </div>
    </div>
  </div>
